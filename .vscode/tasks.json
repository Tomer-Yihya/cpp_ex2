{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-pedantic",
                "-g",
                "MyAlgorithm.cpp",
                "Coordinates.cpp",
                "House.cpp",
                "MySimulator.cpp",
                "MyBatteryMeter.cpp",
                "MyDirtSensor.cpp",
                "MyWallSensor.cpp",
                "VacuumCleaner.cpp",
                "main.cpp",
                "-o",
                "myrobot"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
